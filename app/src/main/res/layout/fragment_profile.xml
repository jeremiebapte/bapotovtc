<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_page_profile_rootview"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.bapoto.vtc.fragments.ProfileFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="119dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginStart="142dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="143dp"
        android:background="@drawable/ic_anon_user_48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="315dp"
        android:layout_height="62dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="272dp"
        android:gravity="center"
        android:text="@string/text_input_username"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/signOutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/signOutButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="263dp"
        android:layout_height="44dp"
        android:layout_margin="@dimen/default_large_margin"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient_button"
        android:gravity="center"
        android:text="@string/button_sign_out_account"
        android:textColor="@color/black"
        android:textSize="@dimen/profile_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="319dp"
        android:layout_height="41dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="43dp"
        android:gravity="center"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImageView" />


</androidx.constraintlayout.widget.ConstraintLayout>