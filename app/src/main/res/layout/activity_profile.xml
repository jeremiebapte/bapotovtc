<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bapoto.vtc.ui.ProfileActivity">
    <!-- BAPOTO IMAGE -->

    <!-- PROGRESS BAR -->

    <!-- PROFILE IMAGE -->

    <!-- PROFILE USERNAME -->

    <!-- CHECKBOX IS USER MENTOR -->


    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="139dp"
        android:background="@drawable/ic_anon_user_48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="233dp"
        android:layout_marginEnd="9dp"
        android:text="@string/text_input_username"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints=""
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="147dp"
        android:layout_height="36dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="289dp"
        android:layout_marginEnd="260dp"
        android:text="@string/text_view_email"
        android:textColor="@color/grey"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- BUTTON UPDATE USERNAME -->

    <!-- BUTTON SIGN OUT -->


    <!-- BUTTONS CONTAINER -->
    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="220dp"
        android:layout_height="37dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="28dp"
        android:paddingStart="@dimen/default_margin"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="208dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="77dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- BUTTON LOGIN -->

        <!-- BUTTON CHAT -->
        <Button
            android:id="@+id/updateButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_large_margin"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="@string/button_update_account"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_text_size"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="551dp" />

        <Button
            android:id="@+id/signOutButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_large_margin"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="@string/button_sign_out_account"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_text_size"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="629dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
